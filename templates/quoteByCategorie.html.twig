{%  extends "base.html.twig" %}
{% block stylesheets %}
    <style type="text/css">
        .header{
            overflow: hidden;
            background-color: #f1f1f1;
            padding: 20px 10px;
        }

        .header div {
            float: left;
            padding-left: 5px;

        }
        .header a{
            float: left;
            padding-left: 5px;

        }
        li{
            border: 1px dashed #222222;
            margin:  5px;
            padding: 20px;
            list-style: none;


        }
        li a{
            margin: 10px;


        }


    </style>

{% endblock %}
{% block body %}

    <div class="header">

        <a href="{{ path('categorie', {})}}"><input type="button" value="Categorie"></a>
        <a href="{{ path('quotes', {})}}"><input type="button" value="Quotes"></a>

    </div>
    <div>
        <h1>{{ cat.name }} </h1>
        <ul>
            {% for quote in quotes %}
                <li>{{ quote.quote }}
                    <i>{{ quote.meta }}</i>
                    <br>
                    <a href="{{ path('update_quote' , {id : quote.id}) }}"><input type="button" value="update"></a>
                    <a href="{{ path('delete_quote', {id : quote.id})}}"><input type="button" value="delete"></a>
                </li>
                <br>
            {% endfor %}
        </ul>
    </div>
    {% for message in app.flashes('notice') %}
        <div class="flash-notice">
            {{ message }}
        </div>
    {% endfor %}




{% endblock %}